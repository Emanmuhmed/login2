<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUp"
    android:background="@drawable/wallpaper">

    <TextView
        android:id="@+id/LOginTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="26dp"
        android:text="sign up "
        android:textColor="@color/white"
        android:textSize="55sp"
        android:layout_centerHorizontal="true"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="360dp"
        android:layout_below="@+id/LOginTv"
        android:layout_marginTop="25dp"
        android:id="@+id/relateve"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="360dp"
            android:background="@drawable/contanier"
            android:layout_margin="26dp"
            >
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/fist_name"
                android:hint="First Name"
                android:textColor="@color/teal_700"
                android:drawableLeft="@drawable/ic_baseline_person_25"
                android:drawablePadding="8dp"
                android:layout_margin="16dp"
                />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:layout_marginLeft="5dp"

                android:layout_toRightOf="@id/fist_name"
                android:drawableLeft="@drawable/ic_baseline_person_25"
                android:hint=" Last name" />


            <EditText
            android:id="@+id/user0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:drawableLeft="@drawable/ic_baseline_person_24"
            android:drawablePadding="8dp"
            android:hint="Enter Your Email "
            android:layout_below="@id/fist_name"
            android:textColorHint="@color/black"
            />
            <EditText
                android:id="@+id/pass1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:drawableLeft="@drawable/ic_baseline_lock_24"
                android:drawablePadding="8dp"
                android:hint=" Enter Your Pass "
                android:layout_below="@id/user0"
                android:textColorHint="@color/black" />
            <Button
                android:id="@+id/login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="30dp"
                android:layout_weight="1"
                android:background="@drawable/buttoncontanier"
                android:text="Login"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:layout_below="@id/pass1"

                />

            <Button
                android:id="@+id/signup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="30dp"
                android:layout_weight="1"
                android:background="@drawable/contanier"
                android:text="SIGN UP"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:layout_toRightOf="@id/login"
                android:layout_below="@id/pass1"

                />

        </RelativeLayout>

    </RelativeLayout>



</RelativeLayout>

